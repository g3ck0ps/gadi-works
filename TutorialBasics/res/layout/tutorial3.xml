<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<ImageView 
		android:layout_width="200dp" 
		android:src="@drawable/clouds_picture"
		android:id="@+id/ivDisplay" 
		android:layout_height="200dp" 
		android:layout_gravity="center"
		/>
	<Button 
		android:text="Set Wallpaper" 
		android:id="@+id/btnSetWallpaper"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:textSize="25dp"
		android:textStyle="bold"
		/>
		
	<HorizontalScrollView
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		>
		<LinearLayout
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
			<ImageView 
				android:layout_width="125dp"
				android:src="@drawable/clouds_picture"
				android:id="@+id/ivImage1" 
				android:layout_height="125dp" 
				android:padding="15dp" 
				/>
			<ImageView 
				android:layout_width="125dp"
				android:src="@drawable/dog_animal"
				android:id="@+id/ivImage2" 
				android:layout_height="125dp" 
				android:padding="15dp" 
				/>
			<ImageView 
				android:layout_width="125dp"
				android:src="@drawable/engine_photo"
				android:id="@+id/ivImage3" 
				android:layout_height="125dp" 
				android:padding="15dp" 
				/>
			<ImageView 
				android:layout_width="125dp"
				android:src="@drawable/flowers_image"
				android:id="@+id/ivImage4" 
				android:layout_height="125dp" 
				android:padding="15dp" 
				/>
			<ImageView 
				android:layout_width="125dp"
				android:src="@drawable/forest_wood"
				android:id="@+id/ivImage5" 
				android:layout_height="125dp" 
				android:padding="15dp" 
				/>
			<ImageView 
				android:layout_width="125dp"
				android:src="@drawable/fruits_picture"
				android:id="@+id/ivImage6" 
				android:layout_height="125dp" 
				android:padding="15dp" 
				/>
			<ImageView 
				android:layout_width="125dp"
				android:src="@drawable/lake_tree"
				android:id="@+id/ivImage7" 
				android:layout_height="125dp" 
				android:padding="15dp" 
				/>
			<ImageView 
				android:layout_width="125dp"
				android:src="@drawable/logs_picture"
				android:id="@+id/ivImage8" 
				android:layout_height="125dp" 
				android:padding="15dp" 
				/>
			<ImageView 
				android:layout_width="125dp"
				android:src="@drawable/sculpture_photo"
				android:id="@+id/ivImage9" 
				android:layout_height="125dp" 
				android:padding="15dp" 
				/>
			<ImageView 
				android:layout_width="125dp"
				android:src="@drawable/stones_background"
				android:id="@+id/ivImage10" 
				android:layout_height="125dp" 
				android:padding="15dp" 
				/>
			<ImageView 
				android:layout_width="125dp"
				android:src="@drawable/sunshades"
				android:id="@+id/ivImage11" 
				android:layout_height="125dp" 
				android:padding="15dp" 
				/>
			<ImageView 
				android:layout_width="125dp"
				android:src="@drawable/tree_winter"
				android:id="@+id/ivImage12" 
				android:layout_height="125dp" 
				android:padding="15dp" 
				/>
		</LinearLayout>
	</HorizontalScrollView>
</LinearLayout>
